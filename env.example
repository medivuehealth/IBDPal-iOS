# IBDPal iOS App Configuration
# Copy this file to .env and fill in your actual values
APP_NAME=IBDPal
APP_VERSION=1.0.0
NODE_ENV=development
APP_TYPE=ios

# Server Configuration
SERVER_PORT=3004
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration - Shared MediVue Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medivue
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# API Configuration
API_BASE_URL=http://localhost:3004/api
API_TIMEOUT=30000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://localhost:19000,http://localhost:3004,http://localhost:8081
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/ibdpal.log

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here
BCRYPT_ROUNDS=12

# AI Search Configuration
HUGGING_FACE_TOKEN=your_hugging_face_token_here
OPEN_WEBUI_API_KEY=your_open_webui_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Health Check
HEALTH_CHECK_ENDPOINT=/api/health

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 